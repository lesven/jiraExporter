{% extends 'base.html.twig' %}

{% block title %}Neuen Job erstellen - JiraExporter{% endblock %}

{% block body %}
    <h1>Neuen Job erstellen</h1>

    {{ form_start(form, {'attr': {'class': 'row g-3'}}) }}
        <div class="col-md-6">
            <div class="card">
                <div class="card-header">
                    <h5 class="mb-0">Job-Informationen</h5>
                </div>
                <div class="card-body">
                    <div class="mb-3">
                        {{ form_label(form.name) }}
                        {{ form_widget(form.name) }}
                        {{ form_errors(form.name) }}
                    </div>

                    <div class="mb-3">
                        {{ form_label(form.description) }}
                        {{ form_widget(form.description) }}
                        {{ form_errors(form.description) }}
                    </div>
                </div>
            </div>
        </div>

        <div class="col-md-6">
            <div class="card">
                <div class="card-header">
                    <h5 class="mb-0">JQL-Abfrage</h5>
                </div>
                <div class="card-body">
                    <div class="mb-3">
                        {{ form_label(form.jql) }}
                        {{ form_widget(form.jql) }}
                        {{ form_errors(form.jql) }}
                        <div class="form-text">
                            <strong>Beispiele:</strong><br>
                            • <code>project = "ABC" AND status = "Open"</code><br>
                            • <code>assignee = currentUser() AND created >= -7d</code><br>
                            • <code>priority = "High" AND resolution = Unresolved</code>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <div class="col-12">
            <div class="d-flex justify-content-between">
                <a href="{{ path('job_index') }}" class="btn btn-secondary">Abbrechen</a>
                <button type="submit" class="btn btn-primary">Job erstellen</button>
            </div>
        </div>
    {{ form_end(form) }}
{% endblock %}
